<section class='user-posts'>
    <div class='user'> 
        <img class='photo border' src=<%= @user.photo%>/>
        <div class='user-info border'>
            <h2><%= @user.name%></h2>
            <p>Number of posts: <%= @user.posts_counter%></p>
        </div>  
    </div>
    <div class='bio border'>
        <h3>Bio</h3>
        <p><%= @user.bio%></p>
    </div>
    <ul class='posts'>
        <% @user.recent_posts.each do |post|%>
            <li class='post border'>
                <h3><%= link_to "Post ##{post.id}", user_post_url(@user, post)%></h3>
                <p><%=post.text%></p>
                <span>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counter%></span>
            </li>
        <%end%>
    </ul>
    <button class='see-all' type='button'><%= link_to 'See all posts', user_posts_path(@user) %></button>
</section>