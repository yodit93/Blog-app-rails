<section class='user-posts'>
    <div class='user'> 
        <img class='photo border' src=<%= @user.photo%>/>
        <div class='user-info border'>
            <h2><%= @user.name%></h2>
            <p>Number of posts: <%= @user.posts_counter%></p>
        </div>  
    </div>
    <div class='bio border'>
        <h3>Bio</h3>
        <p><%= @user.bio%></p>
    </div>
    <ul class='posts'>
        <% @posts.each do |post|%>
            <li class='post border'>
                <h3><%= link_to "Post ##{post.id}", user_post_path(@user, post)%></h3>
                <p><%=post.text%></p>
                <span>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counter%></span>
            </li>
            <ul class='comments border'>
                <% post.recent_comments.each do |comment|%>
                    <li class='comment'><%=comment.author.name%>: <%=comment.text%></li>
                <%end%>    
            </ul>
        <%end%>
    </ul>
    <button class='see-all, pagination' type='button'>Pagination</button>
</section>